<Window x:Class="FirstAttempt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstAttempt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="generateBtn" Content="Generate" HorizontalAlignment="Left" Margin="684,344,0,0" VerticalAlignment="Top" Width="75" Click="generateBtn_Click"/>
        <Label x:Name="label" Content="Choose a subject:" HorizontalAlignment="Left" Margin="66,58,0,0" VerticalAlignment="Top" Height="28" Width="136"/>
        <TextBox x:Name="txtBox2" HorizontalAlignment="Left" Height="28" Margin="220,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113"/>
        <Label x:Name="label_Copy" Content="How many questions?" HorizontalAlignment="Left" Margin="66,91,0,0" VerticalAlignment="Top" Height="28" Width="136"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="220,59,0,0" VerticalAlignment="Top" Width="113" Height="27">
            <ComboBoxItem Content="History"/>
        </ComboBox>
        <ListBox x:Name="hwLstBox" HorizontalAlignment="Left" Height="306" Margin="433,33,0,0" VerticalAlignment="Top" Width="326" SelectionChanged="hwLstBox_SelectionChanged"/>
    </Grid>
</Window>
